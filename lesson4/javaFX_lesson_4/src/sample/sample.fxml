<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <stylesheets><URL value="@/css/Styles.css" /></stylesheets>

    <TextArea fx:id="textArea" editable="false" style="-fx-background-color: #E19720;" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите сообщение.." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" prefHeight="0.0" prefWidth="71.0" styleClass="btn1" text="Send" textFill="#2e4614" />
    </HBox>
</VBox>
