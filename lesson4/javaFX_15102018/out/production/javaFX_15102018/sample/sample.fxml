<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <stylesheets><URL value="@/css/Styles.css" /></stylesheets>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="File">
         <items>
           <MenuItem mnemonicParsing="false" text="Close" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Contacts">
         <items>
           <MenuItem mnemonicParsing="false" text="Delete" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="About">
         <items>
           <MenuItem mnemonicParsing="false">
                  <graphic>
                     <TextArea prefHeight="200.0" prefWidth="200.0" text="При виде этого мессенджера у телеграмма нервно бьётся сердечко!" wrapText="true">
                        <font>
                           <Font name="Courier New" size="14.0" />
                        </font></TextArea>
                  </graphic></MenuItem>
         </items>
       </Menu>
     </menus>
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin>
   </MenuBar>

    <TextArea fx:id="textArea" editable="false" prefHeight="181.0" prefWidth="495.0" style="-fx-border-color: silver; -fx-border-radius: 10;" wrapText="true" VBox.vgrow="ALWAYS">
      <font>
         <Font name="Arial" size="14.0" />
      </font>
      <VBox.margin>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </VBox.margin></TextArea>
    <HBox>
        <TextArea fx:id="textArea2" prefHeight="50.0" prefWidth="430.0" promptText="Введите сообщение" style="-fx-border-color: silver; -fx-border-radius: 10;" wrapText="true" HBox.hgrow="ALWAYS">
         <font>
            <Font size="14.0" />
         </font>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </HBox.margin></TextArea>
        <Button fx:id="btn1" onAction="#sendMsg" prefHeight="50.0" prefWidth="60.0">
         <HBox.margin>
            <Insets bottom="5.0" right="5.0" top="5.0" />
         </HBox.margin></Button>
    </HBox>
</VBox>
