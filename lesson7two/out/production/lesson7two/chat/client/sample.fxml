<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" stylesheets="@blackOnWhite.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chat.client.Controller">
    <HBox fx:id="authPanel" stylesheets="@blackOnWhite.css">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passField" onAction="#sendAuthMsg" promptText="Пароль" />
        <Button onAction="#sendAuthMsg" text="Авторизоваться" />
    </HBox>
    <TextArea fx:id="textArea" editable="false" styleClass="background" stylesheets="@blackOnWhite.css" VBox.vgrow="ALWAYS" />
    <HBox fx:id="msgPanel" stylesheets="@blackOnWhite.css">
        <TextField fx:id="msgField" onAction="#sendMsg" promptText="Написать сообщение" styleClass="background" stylesheets="@blackOnWhite.css" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsg" stylesheets="@blackOnWhite.css" text="Отправить" />
    </HBox>
</VBox>
